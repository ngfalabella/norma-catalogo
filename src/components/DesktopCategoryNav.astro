---
import products from '../data/productos.json';

// Categorías únicas
const categorias = [...new Set(products.map(p => p.categoria))];
---

<aside class="hidden lg:block w-64 shrink-0 sticky top-32 h-fit pr-8 border-r border-norma-dark/10">
    
    
    <h3 class="font-serif text-norma-dark text-xl mb-6 pl-4 my-12 border-l-2 border-norma-accent">
        Categorías
    </h3>

    <nav class="flex flex-col gap-2">
        {categorias.map(cat => (
            <a 
                href={`#${cat}`} 
                data-category={cat}
                class="
                    nav-link
                    group flex items-center justify-between px-4 py-3 rounded-lg 
                    text-norma-muted 
                    transition-all duration-300 ease-out
                    hover:bg-white/50 hover:text-norma-dark
                "
            >
                <span class="text-sm font-medium uppercase tracking-wide group-hover:translate-x-1 transition-transform">
                    {cat}
                </span>
                
                <span class="opacity-0 group-hover:opacity-100 text-norma-accent transition-opacity arrow-icon">
                    &rarr;
                </span>
            </a>
        ))}
    </nav>

   
</aside>

<style>
    /* Cuando el link tiene la clase 'active', se ve así: */
    .nav-link.active {
        background-color: var(--color-norma-dark); /* Fondo Chocolate */
        color: white;                              /* Texto Blanco */
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }
    
    /* Cambiamos el color de la flechita en estado activo */
    .nav-link.active .arrow-icon {
        opacity: 1;
        color: var(--color-norma-accent);
    }
    
    /* Movemos un poquito el texto en estado activo */
    .nav-link.active span:first-child {
        transform: translateX(4px);
    }
</style>

<script>
    document.addEventListener('astro:page-load', () => {
        const sections = document.querySelectorAll('section[id]');
        const navLinks = document.querySelectorAll('.nav-link');

        // Configuración del observador:
        // rootMargin: '-20%...' significa que detecta la sección cuando está 
        // en la parte superior-media de la pantalla, no apenas asoma abajo.
        const observerOptions = {
            rootMargin: '-20% 0px -70% 0px',
            threshold: 0
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // 1. Quitar 'active' de todos
                    navLinks.forEach(link => link.classList.remove('active'));
                    
                    // 2. Buscar el link correspondiente a esta sección
                    const id = entry.target.getAttribute('id');
                    const activeLink = document.querySelector(`.nav-link[href="#${id}"]`);
                    
                    // 3. Ponerle 'active'
                    if (activeLink) {
                        activeLink.classList.add('active');
                    }
                }
            });
        }, observerOptions);

        sections.forEach(section => {
            observer.observe(section);
        });
    });
</script>