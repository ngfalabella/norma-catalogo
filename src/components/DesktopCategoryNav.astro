---
import products from '../data/productos.json';

// Categorías únicas
const categorias = [...new Set(products.map(p => p.categoria))];
---

<aside class="hidden lg:block w-64 flex-shrink-0 sticky top-32 h-fit pr-8 border-r border-norma-dark/10">
    
    
    <h3 class="font-serif text-norma-dark text-xl mb-6 pl-4 my-12 border-l-2 border-norma-accent">
        Categorías
    </h3>

    <nav class="flex flex-col gap-2">
        {categorias.map(cat => (
            <a 
                href={`#${cat}`} 
                data-category={cat}
                class="
                    nav-link
                    group flex items-center justify-between px-4 py-3 rounded-lg 
                    text-norma-muted 
                    transition-all duration-300 ease-out
                    hover:bg-white/50 hover:text-norma-dark
                "
            >
                <span class="text-sm font-medium uppercase tracking-wide group-hover:translate-x-1 transition-transform">
                    {cat}
                </span>
                
                <span class="opacity-0 group-hover:opacity-100 text-norma-accent transition-opacity arrow-icon">
                    &rarr;
                </span>
            </a>
        ))}
    </nav>

    <div class="mt-10 p-5 bg-green-50/50 rounded-2xl border border-green-100 text-center shadow-sm ">
        
        <p class="font-serif text-green-900 text-lg mb-1 uppercase">¿Tenés dudas?</p>
        <p class="text-xs text-green-700 mb-4 px-2 ">
            Escribime para pedidos personalizados o consultas.
        </p>
        
        <a 
            href="https://wa.me/549XXXXXXXXXX" 
            target="_blank"
            class="
                flex items-center justify-center gap-2 w-full py-3 px-4 
                bg-[#25D366] hover:bg-[#20bd5a] 
                text-white text-sm font-bold uppercase tracking-wide
                rounded-xl transition-all duration-300
                shadow-md hover:shadow-lg transform hover:-translate-y-0.5
            "
        >
            <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
            WhatsApp
        </a>
    </div>
</aside>

<style>
    /* Cuando el link tiene la clase 'active', se ve así: */
    .nav-link.active {
        background-color: var(--color-norma-dark); /* Fondo Chocolate */
        color: white;                              /* Texto Blanco */
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }
    
    /* Cambiamos el color de la flechita en estado activo */
    .nav-link.active .arrow-icon {
        opacity: 1;
        color: var(--color-norma-accent);
    }
    
    /* Movemos un poquito el texto en estado activo */
    .nav-link.active span:first-child {
        transform: translateX(4px);
    }
</style>

<script>
    document.addEventListener('astro:page-load', () => {
        const sections = document.querySelectorAll('section[id]');
        const navLinks = document.querySelectorAll('.nav-link');

        // Configuración del observador:
        // rootMargin: '-20%...' significa que detecta la sección cuando está 
        // en la parte superior-media de la pantalla, no apenas asoma abajo.
        const observerOptions = {
            rootMargin: '-20% 0px -70% 0px',
            threshold: 0
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // 1. Quitar 'active' de todos
                    navLinks.forEach(link => link.classList.remove('active'));
                    
                    // 2. Buscar el link correspondiente a esta sección
                    const id = entry.target.getAttribute('id');
                    const activeLink = document.querySelector(`.nav-link[href="#${id}"]`);
                    
                    // 3. Ponerle 'active'
                    if (activeLink) {
                        activeLink.classList.add('active');
                    }
                }
            });
        }, observerOptions);

        sections.forEach(section => {
            observer.observe(section);
        });
    });
</script>