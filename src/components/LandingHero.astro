        </a>
    </div>

    <div class="relative z-10 flex flex-col items-center justify-center h-full text-center px-4 fade-in">
        <h1 class="font-serif text-5xl md:text-7xl text-white mb-2 drop-shadow-xl">
            Norma Cakes
        </h1>
        
        <p class="text-white/90 text-sm md:text-lg tracking-[0.2em] uppercase font-light mb-10 max-w-lg">
           Micaela Denapole
        </p>

        <div class="flex flex-col w-full max-w-xs gap-4">
            <a 
                href="/catalogo" 
                class="w-full py-4 bg-white text-norma-dark font-bold uppercase tracking-widest text-sm rounded-full hover:scale-105 transition-transform duration-300 shadow-lg"
            >
                Ver Catálogo
            </a>

            <a 
                href={whatsappLink}
                target="_blank"
                class="w-full py-4 bg-transparent border border-white/40 text-white font-bold uppercase tracking-widest text-sm rounded-full hover:bg-[#25D366] hover:border-[#25D366] transition-all duration-300 backdrop-blur-sm"
            >
                WhatsApp
            </a>
        </div>
    </div>
</section>

<script>
    document.addEventListener('astro:page-load', () => {
        const video = document.getElementById('hero-video') as HTMLVideoElement;
        
        if (video) {
            // Forzamos la carga por si acaso
            video.load();
            
            const playVideo = () => {
                video.play().catch(e => console.log("Autoplay prevenido por navegador:", e));
            };

            // Intentamos reproducir inmediatamente
            playVideo();

            // Y también agregamos un listener por si el usuario toca la pantalla
            // (algunos móviles requieren un toque para iniciar el audio/video)
            document.addEventListener('touchstart', playVideo, { once: true });
        }
    });
</script>