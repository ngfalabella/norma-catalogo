---
const instagramLink ="https://www.instagram.com/norma.cakes_/"; 
const whatsappLink = "https://wa.me/5492324650692"; 
---

<section class="relative h-[100dvh] w-full overflow-hidden bg-norma-dark">
    
    <div class="absolute inset-0 w-full h-full z-0">
        <video 
            id="hero-video"
            autoplay 
            loop 
            muted 
            playsinline 
            preload="auto"
            poster="/images/poster.jpg" 
            class="w-full h-full object-cover"
        >
            <source src="/images/over.mp4" type="video/mp4" />
        </video>
        
        <div class="absolute inset-0 bg-black/40"></div>
    </div>

    <div class="absolute top-0 right-0 p-6 z-20 hidden">
        <a 
            href={instagramLink} 
            target="_blank" 
            class="flex items-center justify-center w-12 h-12 bg-white/10 backdrop-blur-md border border-white/20 rounded-full text-white hover:bg-white hover:text-pink-600 transition-all duration-300 shadow-lg"
        >
